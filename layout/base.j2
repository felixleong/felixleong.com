<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"><head profile="http://gmpg.org/xfn/11"><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <title>{% block title %}{{ resource.meta.blog_title }} | {{ resource.meta.blog_description }}{% endblock title %}</title>

    <meta name="robots" content="index, follow">
    <link rel="stylesheet" type="text/css" media="all" href="{{ media_url('css/reset.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ media_url('style.css') }}" media="screen" />
    <link rel="alternate" type="application/rss+xml" title="RSS 2.0" href="{{ context_url('feed.html') }}" />
    <!--[if IE 6]>
    <script type="text/javascript" src="{{ media_url('js/pngfix.js') }}"></script>
    <script type="text/javascript" src="{{ media_url('js/menu.js') }}"></script>
    <link rel="stylesheet" type="text/css" media="all" href="{{ media_url('css/ie6.css') }}" />
    <![endif]-->
    <!--[if IE 7]>
    <link rel="stylesheet" type="text/css" media="all" href="{{ media_url('css/ie7.css') }}" />
    <![endif]-->
    <link rel="shortcut icon" href="{{ media_url('images/favicon.ico') }}" />

    <!-- Theme version -->
    <meta name="generator" content="Hyde" />
    <meta name="generator" content="Mainstream 1.7.2" />
    <meta name="generator" content="WooFramework 5.0.2" />

    <link href="{{ media_url('styles/default.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ media_url('shortcodes.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ media_url('custom.css') }}" rel="stylesheet" type="text/css" />
    {% block css %}
    {% for css_file in resource.meta.css_files %}
    <link href="{{ media_url(css_file) }}" rel="stylesheet" type="text/css" />
    {% endfor %}
    {% endblock css %}
  </head>

  <body class="home blog chrome">
    <div id="container">
      <div id="header">
        <div id="logo">
          <h1>{{ resource.meta.blog_title }}</h1>
          <h2>{{ resource.meta.blog_description }}</h2>

          <a href="{{ site.full_url('') }}" title="Mainstream">
            <img src="{{ media_url('images/logo.png') }}" alt="Mainstream Logo">
          </a>
        </div><!-- /#logo -->

        <div id="top-ad"><div class="advert">{% block topad %}{% endblock %}</div></div><!-- /#top-ad -->

        <div class="clear"></div>

        <div id="navigation">
        {% block nav %}
        {% from "macros.j2" import render_nav with context %}
        {{ render_nav(menu, 'nav') }}
        {% endblock nav %}
        </div><!-- /#navigation -->

        <div class="clear"></div>
      </div><!-- /#header -->

      <div id="main">
        <div id="inside">
          {% block teaser %}{% endblock teaser %}

          <div id="content{{ ' full-width' if full_width }}">{% block main %}{% endblock main %}</div><!-- /#content -->

            {% block sidebar %}
            {% include "sidebar.j2" %}
            {% endblock sidebar %}
            <div class="clear"></div>

          </div><!-- /#inside -->
        </div><!-- /#main -->

        <div id="footer">
          {% block footer %}
          {% from "macros.j2" import render_nav with context %}
          {{ render_nav(menu, '', False) }}
          {% endblock footer %}
          <p>Written by Seh Hui Leong, under <a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/">CC-BY-SA 3.0</a> license. Always searching for 42.</p>
          <p><a href="http://woothemes.com/" title="WooThemes"><img src="{{ media_url('images/woothemes.png') }}" alt="WooThemes Logo"></a></p>

        </div><!-- /#footer -->
      </div><!-- /#container -->

  {% block js %}
  <!-- Javascript at the bottom for fast page loading -->
  {% block jquery %}
  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>
  <script>window.jQuery || document.write('<script src="{{ media_url('js/libs/jquery-1.5.1.min.js') }}">\x3C/script>')</script>
  {% endblock jquery %}

  {% block sharingjs %}
  {% if resource.meta.enable_sharing -%}
  <div id="fb-root"></div>
  <!-- Facebook Like buttons -->
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=147628288684317";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
  <!-- Twitter -->
  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
  {%- endif %}
  {% endblock sharingjs %}

  {% block scripts %}
  {% endblock scripts %}

  <!--[if lt IE 7 ]>
  <script src="{{ media_url('js/libs/dd_belatedpng.js') }}"></script>
    <script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
  <![endif]-->

  {% block analytics %}
  {% include "analytics.j2" %}
  {% endblock analytics %}

  {% endblock js %}
  </body></html>
