{% extends "base.j2" %}

{% block main -%}
{% for res in resource.page.posts %}
<div class="post">
<h2 class="title"><a href="{{ content_url(res.url) }}" title="{{ res.meta.title }}">{{ res.meta.title }}</a></h2>
<p class="meta">Posted: <time datetime="{{ res.meta.created.strftime('%Y-%m-%d') }}" class="date">{{ res.meta.created.strftime('%d %b %Y') }}</time></p>

<div class="entry">
{% refer to res.url as article -%}
{{ article.post|markdown|typogrify }}
</div>

{% if res.meta.tags %}
<div class="tags">
Tags:
{% for tag in res.meta.tags %}
<a href="{{ content_url('blog/tags/'~tag~'.html') }}" rel="tag">{{ tag }}</a>{% if not loop.last %}, {% endif %}
{% endfor %}
</div>
{% endif %}
</div><!-- /.post -->
{% endfor %}
{%- endblock %}
